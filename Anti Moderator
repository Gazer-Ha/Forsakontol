-- Dear dair- oh wait wrong one

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local groupId = 33548380 
local minRank = 2 

local function notify(message)
    game.StarterGui:SetCore("SendNotification", {
        Title = "Group Member Detected",
        Text = message,
        Duration = 30
    })
end

local function checkForGroupMembers()
    for _, player in pairs(Players:GetPlayers()) do
        if player:IsInGroup(groupId) then
            local rank = player:GetRankInGroup(groupId)
            if rank >= minRank then
                local displayName = player.DisplayName
                notify(displayName .. " is Suspicious")
                task.wait(3)
                LocalPlayer:Kick("Mod/Staff/Admin/Tester In Game")
            end
        end
    end
end

Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Wait()
    checkForGroupMembers()
end)

checkForGroupMembers()
