local p = game.Players.LocalPlayer
local rs = cloneref(game:GetService("RunService"))

local function nopp(c)
	for _, v in ipairs(c:GetDescendants()) do
		if v:IsA("BasePart") then
			v.CustomPhysicalProperties = PhysicalProperties.new(1000, 0.3, 0.5, 1, 1)
		end
	end
end

local function s(c)
	local hrp = c:WaitForChild("HumanoidRootPart")
	local h = c:WaitForChild("Humanoid")
	local spd = 0.85
	local tpDistance = 0.015

	rs.RenderStepped:Connect(function()
		if c.Parent then
			local dir = h.MoveDirection
			local vel = hrp.Velocity
if dir.Magnitude > 0 and vel.Magnitude > 0 then
				local cf = CFrame.lookAt(hrp.Position, hrp.Position + dir)
				hrp.CFrame = hrp.CFrame:Lerp(cf, spd)

				-- TP walk
				hrp.CFrame = hrp.CFrame + dir.Unit * tpDistance
			end
		end
	end)
end

local function oc(c)
	s(c)
	nopp(c)
end

if p.Character then
	oc(p.Character)
end

p.CharacterAdded:Connect(oc)
